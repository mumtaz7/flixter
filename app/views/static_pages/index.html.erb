<style>
@import url('https://fonts.googleapis.com/css?family=Julius+Sans+One');
</style>


<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    <li data-target="#carousel-example-generic" data-slide-to="4"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Welcome to Zoom Fitness!
      </div>
    </div>
      <div class="item">
        <%= image_tag 'slider2.jpg', class: 'img-responsive' %>
        <div class="carousel-caption">
          New Jersey's exciting new fitness studio
      </div>
      </div>
        <div class="item">
          <%= image_tag 'slider3.jpg', class: 'img-responsive' %>
          <div class="carousel-caption">
            Get stronger everyday
          </div>
        </div>
          <div class="item">
            <%= image_tag 'slider4.jpg', class: 'img-responsive' %>
            <div class="carousel-caption">
              State of the art equipment
          </div>
        </div>
          <div class="item">
            <%= image_tag 'slider5.jpg', class: 'img-responsive' %>
            <div class="carousel-caption">
              Come try a class today!
            </div>
          </div>
      </div>


  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>



<br />

<div class="col-xs-10 col-xs-offset-1 features text-center">
  <div class="col-sm-4">
    <i class="glyphicon glyphicon-ok"></i>
    <h4>Highly skilled, nationally certified trainers who will help you meet your goals</h4>
  </div>

  <div class="col-sm-4">
    <i class="glyphicon glyphicon-ok"></i>
    <h4>Fun fitness classes that will challenge you</h4>
  </div>

  <div class="col-sm-4">
    <i class="glyphicon glyphicon-ok"></i>
    <h4>State of the art equipment</h4>
  </div>
</div>